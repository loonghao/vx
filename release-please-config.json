      "release-type": "rust"
    },
    "crates/vx-sdk": {
      "package-name": "vx-sdk",
      "component": "vx-sdk",
      "changelog-path": "CHANGELOG.md",
      "release-type": "rust"
    },
    "crates/vx-tool-standard": {
      "package-name": "vx-tool-standard",
